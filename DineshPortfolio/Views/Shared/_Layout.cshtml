@using DineshPortfolio.State;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DineshPortfolio</title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
</head>
<body>
    <nav class="flex justify-between items-center shadow-md">
        <img src="~/images/logo.jfif" alt="logo" class="logo w-12 rounded-lg mx-12 my-2">
        <ul class="flex mx-12 gap-12 my-2 items-center">
            <li>
                <a href="default.asp" class="flex gap-2">
                    <span class="material-symbols-outlined">
                        home
                    </span>Home
                </a>
            </li>
            <li>
                <a asp-controller="Blogs" asp-action="Index"  class="flex gap-2">
                    <span class="material-symbols-outlined">
                        rss_feed
                    </span>Blogs
                </a>
            </li>
            <li>
                <a href="contact.asp" class="flex gap-2">
                    <span class="material-symbols-outlined">
                        phone_in_talk
                    </span>Contact
                </a>
            </li>
            @if(LoginState.IsLoggedIn()){
                <li>
                    <a asp-controller="Blogs" asp-action="Create" class="flex gap-2">
                        <span class="material-symbols-outlined">
                            add_circle
                        </span>Create Blog
                    </a>
                </li>
                <li>
                <a asp-controller="Admin" asp-action="Logout" class="flex gap-2">
                    <span class="material-symbols-outlined">
                        logout
                    </span>LogOut
                </a>
            </li>
            }
        </ul>
    </nav>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
